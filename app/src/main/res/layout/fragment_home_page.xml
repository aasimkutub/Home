<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    tools:context=".HomePage">


    <TextView
        android:id="@+id/home_top_text_sec"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="14dp"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="34dp"
        android:paddingStart="10dp"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:paddingEnd="0dp"
        android:paddingRight="0dp"
        android:text="Hello,"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="34dp"
        android:layout_toEndOf="@+id/home_top_text_sec"
        android:layout_toRightOf="@+id/home_top_text_sec"
        android:paddingStart="0dp"
        android:paddingLeft="0dp"
        android:paddingTop="10dp"
        android:paddingEnd="10dp"
        android:paddingRight="10dp"
        android:text="Annie!"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="@android:color/black"
        android:textStyle="bold" />

    <ImageView
        android:padding="2dp"
        android:id="@+id/navigationMenu"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginRight="25dp"
        android:src="@drawable/menu"
        android:background="?attr/selectableItemBackground"/>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/scene"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_below="@+id/home_top_text_sec"
        android:layout_marginTop="20dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        >

    </androidx.recyclerview.widget.RecyclerView>

    <androidx.recyclerview.widget.RecyclerView

        android:id="@+id/rv_roomCardHome"
        android:layout_width="match_parent"
        android:layout_height="290dp"
        android:layout_below="@+id/scene"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="2dp"
        android:layout_marginRight="0dp"
        android:orientation="horizontal"
        android:padding="8dp"
        android:paddingLeft="8dp">

    </androidx.recyclerview.widget.RecyclerView>
</RelativeLayout>